{% extends 'base.html.twig' %}

{% block meta_description %}
<meta name="article" content="blog where the artist Manon Mangeol can expose her work">
{% endblock %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}

<div class="article-blog">
  {% for article in articles %}
    <div class="single-article">
      <h2>{{ article.title }}</h2>
      <div class="article">
        <p>{{ article.content|raw }}</p>
      <img src="{{ asset('img/' ~ article.photo) }}" alt="Illu" class="image-reduite" onclick="openModal(this.src)">
      </div>
      <p> Post√© le : {{ article.dateCreation|date('d-m-Y')}}</p>
    </div>
  {% endfor %}
</div>

<!-- Modal -->
<div id="myModal" class="modal">
  <span class="close" onclick="closeModal()">&times;</span>
  <img class="modal-content" id="img01">
</div>

{% endblock %}
