<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        <link rel="stylesheet" href=" {{ asset ('css/style.css')}}">
        {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> #}
        {% endblock %}
    </head>

    <body class="parallax-section">

    <section id="section1">
        <div id="menu">
            <div id="menu-bar" onclick="menuOnClick()">
                <div id="bar1" class="bar"></div>
                <div id="bar2" class="bar"></div>
                <div id="bar3" class="bar"></div>
            </div>
            <nav class="nav" id="nav">
                <ul>
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li><a href="{{ path('app_article') }}">My work</a></li>
                    <li><a href="{{ path('app_category') }}">Place</a></li>
                    <li><a href="#">Shop</a></li>
                    <li><a href="{{ path('app_contact') }}">Contact</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle">Login/Register</a>
                        <div class="dropdown-menu">
                            <a href="{{ path('app_login') }}">Login</a>
                            <a href="{{ path('app_register') }}">Register</a>
                        </div>
                    </li>
                </ul>
            </nav> 
        </div>
        {# Background du animé du menu #}
        <div class="menu-bg" id="menu-bg"></div>
        <img src="{{ asset('/img/manonManuscrit.PNG') }}" alt="logo" id="manonLogo">
    </section>



        {% block body %}{% endblock %}
    </body>

    {% block javascripts %}
    <script src="{{ asset ('js/script.js')}}"></script>
    {% endblock %}
</html>
