{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

<h1>Liste des catégories</h1>

<ul>
    {% for category in categories %}
        <li>
            <a href="{{ path('app_topics', {'categoryId': category.id}) }}">
                {{ category.name }}
            </a>
        </li>
    {% else %}
        <li>Aucune catégorie trouvée.</li>
    {% endfor %}
</ul>

{% endblock %}
