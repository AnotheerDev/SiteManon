{% extends 'base.html.twig' %}

{% block title %}Commande Réussie{% endblock %}

{% block body %}
    <div class="container">
        <h1>Commande Réussie</h1>
        <p>Merci pour votre commande !</p>

        {# Afficher les informations de la commande #}
        <div class="order-details">
            <h2>Détails de la Commande</h2>
            <p>Commande numéro : {{ commande.reference }}</p>
            <p>Date de commande : {{ commande.dateCommande|date('d-m-Y') }}</p>
            <p>Nom : {{ commande.lastName }}</p>
            <p>Prénom : {{ commande.firstName }}</p>
            <p>Email : {{ commande.email }}</p>
            <p>Adresse : {{ commande.adresse }}, {{ commande.codePost }}</p>
            
            <h3>Articles dans la Commande :</h3>
            <ul>
                {% for cart in commande.carts %}
                    <li>{{ cart.product.name }} - Quantité : {{ cart.quantity }} - Prix : {{ cart.product.price}}</li>
                {% endfor %}
            </ul>
            

            <p>Total : {{ total|number_format(2, '.', ',') }} €</p>
        </div>

        {# Lien pour télécharger le PDF #}
        {# <div class="download-pdf">
            <a href="{{ path('download_order_pdf', {'id': commande.id}) }}" class="btn btn-primary">Télécharger le récapitulatif en PDF</a>
        </div> #}
    </div>
{% endblock %}
