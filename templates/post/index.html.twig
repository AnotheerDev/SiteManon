{% extends 'base.html.twig' %}
{% block meta_description %}
<meta name="post" content=" here we can see all the post from a specific topic">
{% endblock %}
{% block title %}Post{% endblock %}

{% block body %}

<h2>{{ topicName }}</h2>

{% for post in posts %}
    <div class="post">
        <p>{{ post.content|raw}}</p>
    </div>
{% endfor %}

{% endblock %}
