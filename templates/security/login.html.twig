{% extends 'base.html.twig' %}

{% block meta_description %}
<meta name="login" content="here you can login to the site of artist Manon Mangeol">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="log">
        <div class="centre">
            <h1>Se connecter</h1>
            
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% else %}
            

            <form method="post">
                <div class="form-row">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input" autocomplete="email" required autofocus>
                </div>
                <div class="form-row">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-input" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn-blue">Se connecter</button>
            </form>
        </div>
        {% endif %}
        <div>
            <img src="{{ asset('/img/illustrationLogin.PNG') }}" alt="illuLogin" id="illuLogin">
        </div>

    </section>
{% endblock %}
