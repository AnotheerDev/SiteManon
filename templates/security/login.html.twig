{% extends 'base.html.twig' %}

{% block meta_description %}
<meta name="description" content="here you can login to the site of artist Manon Mangeol">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="log">
        <div class="centre">
            
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% else %}
            
            <h1>Se connecter</h1>
            <p class="already-registered">
                Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}">Enregistrez-vous ici</a>.
            </p>
            <form method="post">
                <div class="form-row">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input" autocomplete="email" required autofocus>
                </div>
                <div class="form-row">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-input" autocomplete="current-password" required>
                </div>
                <div>
                    <p>Mot de passe oublié ? <a href="{{ path('app_forgot_password_request') }}">Cliquez ici</a></p>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn-blue">Se connecter</button>
            </form>
        </div>
        {% endif %}
        <div>
            <img src="{{ asset('/img/illustrationLogin.webp') }}" alt="illuLogin" id="illuLogin">
        </div>

    </section>
{% endblock %}





